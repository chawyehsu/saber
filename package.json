{
  "private": true,
  "name": "saber",
  "scripts": {
    "test": "npm run lint && lerna run test",
    "lint": "lerna run lint",
    "prepare": "husky install && lerna run prepublishOnly"
  },
  "repository": {
    "url": "https://github.com/chawyehsu/saber",
    "type": "git"
  },
  "author": "egoist<0x142857@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config": "^2.18.1",
    "@types/node": "^20.5.1",
    "conf": "6.2.0",
    "enquirer": "^2.4.1",
    "eslint": "^9.3.0",
    "husky": "5.2.0",
    "lerna": "6.6.2",
    "lint-staged": "8.2.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "typedoc": "^0.26.9",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "linters": {
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/**",
      "**/vendor/**",
      "*.min.js",
      "**/vue-renderer/app/**",
      "**/example/**",
      "website/**"
    ]
  },
  "workspaces": [
    "packages/*",
    "packages/@alterjs/*",
    "website",
    "examples/*"
  ],
  "volta": {
    "node": "18.20.4"
  }
}
